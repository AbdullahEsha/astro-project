---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="forgot password">
    <div class="h-screen flex items-center justify-center">
        <form class="w-96 space-y-4">
            <h1 class="text-4xl font-bold">Forgot Password</h1>
            <div>
                <label for="email" class="block">Email</label>
                <input type="email" id="email" name="email" class="w-full border border-gray-300 rounded" />
            </div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded">Submit</button>
            <hr class="border-gray-300" />
            <div class="flex justify-between">
                <a href="/login" class="text-blue-500">Login</a>
                <a href="/register" class="text-blue-500">Register</a>
            </div>
        </form>
    </div>
</Layout>